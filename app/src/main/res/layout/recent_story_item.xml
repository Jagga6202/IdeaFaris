<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/title"

        android:src="@drawable/dummypp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#BCD9FD"/>

    <TextView
        android:id="@+id/genre"
        android:layout_toRightOf="@id/title"
        android:textColor="#696969"
        android:text="John farmer"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:maxLength="24"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/year"
        android:textColor="#ADADAD"
        android:text="this is a demo"
        android:textSize="10sp"
        android:maxLength="150"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/title"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/genre"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/clock1"
        android:drawablePadding="2dp"
        android:layout_alignParentRight="true"
        android:text="7.00"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:text="3"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:id="@+id/dislike"/>
    <ImageView
        android:id="@+id/unlikethump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thumbsdownempty"
        android:layout_below="@+id/timer"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/dislike"
        android:layout_marginRight="4dp"
        />
    <ImageView
        android:id="@+id/likethump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thumbsup"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/timer"
        android:layout_toLeftOf="@+id/like"
        android:layout_marginRight="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/unlikethump"
        android:text="20"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/timer"
        android:id="@+id/like"/>
    <ImageView
        android:id="@+id/sharebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/like"
        android:src="@drawable/share"
        android:layout_marginTop="7dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/share"/>
    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/like"
        android:text="Share"
        android:textColor="#3880FD"
        android:layout_marginTop="5dp"/>


</RelativeLayout>